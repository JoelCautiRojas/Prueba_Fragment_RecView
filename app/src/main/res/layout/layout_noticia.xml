<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/portada"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/imagen1" />

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fecha"
                    android:textStyle="italic"
                    android:textSize="11sp"
                    android:layout_marginBottom="6dp"
                    android:textColor="#8f8f8f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Martes 7 de Noviembre del 2017" />

                <TextView
                    android:layout_marginBottom="6dp"
                    android:textColor="#303030"
                    android:textStyle="bold"
                    android:id="@+id/encabezado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Primera Noticia de la Semana" />

                <TextView
                    android:id="@+id/descripcion"
                    android:textSize="11sp"
                    android:textColor="#2c83d4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Estesfds sdfsd fsdf sdfsd fs sdfsdfsdfsd sdfsfs sdf sf sd sdfsd sfs  es un texto de relleno dsfdsg gdfgdfg sgfdsg sdfgds dsgdfgs sgdsgdf sdgsdfgdf dfsgdfgdf sfgsdfgdsf gdgfghj jyuijjhj hjk" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
